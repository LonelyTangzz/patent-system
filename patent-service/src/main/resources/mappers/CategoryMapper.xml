<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tang.patent.dao.CategoryMapper">
    <resultMap id="BaseResultMap" type="com.tang.patent.entity.bean.Category">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="category" property="category" jdbcType="VARCHAR"/>
        <result column="flag" property="flag" jdbcType="TINYINT"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, category,flag
    </sql>
    <!-- 新增分类 -->
    <insert id="insert" parameterType="com.tang.patent.entity.bean.Category">
        insert into category(id, category, flag)
        values (#{category.id}, #{category.category}, 0)
    </insert>
    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from category
        where id = #{id,jdbcType=INTEGER}
    </select>
    <select id="getAllCategory" resultMap="BaseResultMap">
        select *
        from category
    </select>
    <select id="getPageCategory" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select *
        from category
        ORDER BY id ASC
        limit #{page,jdbcType=INTEGER},5
    </select>
    <select id="countCategory" resultType="java.lang.Integer">
        select count(*)
        from category
    </select>
    <update id="updateByPrimaryKeySelective" parameterType="com.tang.patent.entity.bean.Category">
        update category
        <set>
            <if test="category != null">
                category = #{category,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>
</mapper>