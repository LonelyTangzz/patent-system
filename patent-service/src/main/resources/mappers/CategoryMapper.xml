<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tang.patent.dao.CategoryMapper">
    <resultMap id="BaseResultMap" type="com.tang.patent.entity.bean.Category">
        <id column="pkId" property="pkId" jdbcType="BIGINT"/>
        <result column="categoryName" property="categoryName" jdbcType="VARCHAR"/>
        <result column="flag" property="flag" jdbcType="TINYINT"/>
    </resultMap>
    <sql id="Base_Column_List">
        pkId, categoryName,flag
    </sql>
    <!-- 新增分类 -->
    <insert id="insert" parameterType="com.tang.patent.entity.bean.Category">
        INSERT INTO category(pkId, categoryName, flag)
        VALUES (#{pkId}, #{categoryName}, 0)
    </insert>
    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from category
        where pkId = #{id,jdbcType=INTEGER} AND flag = 0
    </select>
    <select id="getAllCategory" resultType="com.tang.vos.category.CategoryVo">
        select pkId,categoryName
        from category
        where flag = 0
    </select>
    <!-- 每页五条   -->
    <select id="getPageCategory" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT pkId, categoryName
        FROM category
        WHERE flag = 0
        ORDER BY pkId ASC
                LIMIT #{page,jdbcType=INTEGER}, 5
    </select>
    <select id="countCategory" resultType="java.lang.Integer">
        SELECT count(pkId)
        FROM category
        WHERE flag = 0
    </select>
    <update id="updateByPrimaryKey" parameterType="com.tang.patent.entity.bean.Category">
        UPDATE category
        <set>
            <if test="categoryName != null">
                categoryName = #{categoryName},
            </if>
        </set>
        WHERE pkId = #{pkId}
    </update>
    <update id="deleteCategory" parameterType="java.lang.Long">
        UPDATE category
        SET flag=0
        WHERE pkId = #{pkId}
    </update>
</mapper>